<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Miguel Machado"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="16dp"
            android:id="@+id/MyName" />

    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            tools:srcCompat="@drawable/_9252011"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:srcCompat="@drawable/_9252011"
            android:scaleType="centerInside" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

    <TextView
            android:text="+5522935000790"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/myNumber"
            android:autoLink="phone"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/MyName"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textColor="#009688" />

    <TextView
            android:text="hello@miguelmachado.dev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/myEmail"
            android:autoLink="email"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/myNumber"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textColor="#009688" />

    <TextView
            android:text="You can find me online ðŸ˜‰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myAddress"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/myEmail"
            android:layout_marginTop="16dp" />

    <TextView
            android:text="Working at:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workingAt"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            android:layout_marginBottom="8dp" />

    <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/uber_logo_2018"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:contentDescription="Logo da Uber"
            android:background="#97FFFFFF"
            android:scaleType="centerInside"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
